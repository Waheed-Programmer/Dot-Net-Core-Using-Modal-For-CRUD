@{
    ViewData["Title"] = "Index";
}

<h1>List </h1>
<button class="btn btn-primary m-2" id="btnAddEmployee">Add Employee</button>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr class="text-center">
            <th>Employe Id</th>
            <th>Employe Name</th>
            <th>Employe Email</th>
            <th>Department</th>
            <th>Employe Contact</th>
            <th>Employe Address</th>
            <th>Gender</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody class="text-center" id="table_data">
    </tbody>
</table>

<div class="modal fade-modal" id="Employeemodal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="text-info modal-title" id="HeadId">Add Emoloyee</h3>
                <button class="close text-danger" data-dismiss="modal">&times; </button>
            </div>
            <div class="modal-body">
                <form method="post">

                    <input type="hidden" class="form-control" disabled="disabled" name="EmployeeId" id="EmployeeId" />
                    <div class="form-group">
                        <label>Department</label>
                        <select class="form-control" id="ddldesignation">
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" placeholder="Enter Employee Name" name="EmployeeName" id="EmployeeName" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" placeholder="Enter Employee Email" name="EmployeeEmail" id="EmployeeEmail" />
                    </div>
                    <div class="form-group">
                        <label>Contact</label>
                        <input type="text" class="form-control" placeholder="Enter Employee Contact" name="EmployeeContact" id="EmployeeContact" />
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" class="form-control" placeholder="Enter Employee Address" name="EmployeeAddress" id="EmployeeAddress" />
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="radioGet" id="radioGet" value="Male">
                            <label class="form-check-label" for="radioGet">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="radioGet" id="radioGet" value="Female">
                            <label class="form-check-label" for="radioGet">FeMale</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="addEmployee();" id="InsertEmployee">Save</button>
                <button class="btn btn-success" onclick="UpdateEmployee();" style="display:none;" id="btnUpdateEmployee">Update</button>
                <button class="btn btn-danger btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>

</div>



@section Scripts{
<script src="~/js/site.js" asp-append-version="true"></script>
}